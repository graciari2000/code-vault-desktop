{
  "name": "code-vault-desktop",
  "version": "0.4.0",
  "description": "AI-powered code snippet manager and productivity tool",
  "author": {
    "name": "graciari2000",
    "email": "your-email@example.com"
  },
  "private": true,
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:renderer": "cd renderer && vite",
    "dev:electron": "tsc -p tsconfig.main.json && electron .",
    "build": "npm run build:renderer && npm run build:main && electron-builder",
    "build:renderer": "cd renderer && vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "prebuild": "npm run build:renderer && npm run build:main",
    "start": "electron .",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.codevault.desktop",
    "productName": "Code Vault",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "renderer/dist/**/*",
      "package.json",
      "!**/*.map",
      "!renderer/src/**/*",
      "!renderer/*.config.*",
      "!**/.vscode",
      "!*.log",
      "!README.md",
      "!.gitignore"
    ],
    "extraResources": [
      {
        "from": "renderer/dist",
        "to": "renderer/dist",
        "filter": ["**/*"]
      }
    ],
    "asar": true,
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/code vault logo.ico",
      "publisherName": "graciari2000"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Code Vault"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/code vault logo.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/code vault logo.png",
      "category": "Development"
    }
  },
  "dependencies": {
    "axios": "^1.4.0",
    "better-sqlite3": "^12.4.1",
    "lucide-react": "^0.263.1",
    "mongodb": "^6.20.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^6.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@types/uuid": "^9.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^8.2.0",
    "electron": "^29.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.9.2",
    "vite": "^5.0.0",
    "wait-on": "^7.0.1"
  }
}