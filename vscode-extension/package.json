{
  "name": "code-vault",
  "displayName": "Code Vault",
  "description": "AI-powered code snippet suggestions from your personal code library",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeVault.showSnippets",
        "title": "Code Vault: Show Relevant Snippets",
        "category": "Code Vault"
      },
      {
        "command": "codeVault.captureCode",
        "title": "Code Vault: Capture Current Code",
        "category": "Code Vault"
      },
      {
        "command": "codeVault.checkStatus",
        "title": "Code Vault: Check Extension Status",
        "category": "Code Vault"
      },
      {
        "command": "codeVault.refreshCache",
        "title": "Code Vault: Refresh Snippet Cache",
        "category": "Code Vault"
      }
    ],
    "configuration": {
      "title": "Code Vault",
      "properties": {
        "codeVault.serverUrl": {
          "type": "string",
          "default": "http://localhost:8802",
          "description": "URL of the Code Vault desktop app backend server"
        },
        "codeVault.autoCapture": {
          "type": "boolean",
          "default": true,
          "description": "Automatically capture code selections and file saves"
        },
        "codeVault.captureOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Capture entire files when they are saved"
        },
        "codeVault.autoSuggest": {
          "type": "boolean",
          "default": true,
          "description": "Show automatic snippet suggestions (future feature)"
        }
      }
    },
    "keybindings": [
      {
        "command": "codeVault.showSnippets",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorTextFocus"
      },
      {
        "command": "codeVault.captureCode",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codeVault.captureCode",
          "group": "codeVault@1",
          "when": "editorHasSelection"
        },
        {
          "command": "codeVault.showSnippets",
          "group": "codeVault@2",
          "when": "editorTextFocus"
        }
      ],
      "commandPalette": [
        {
          "command": "codeVault.showSnippets"
        },
        {
          "command": "codeVault.captureCode"
        },
        {
          "command": "codeVault.checkStatus"
        },
        {
          "command": "codeVault.refreshCache"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.4.0"
  },
  "publisher": "AnnStudios",
  "repository": {
    "type": "git",
    "url": "https://github.com/graciari2000/code-vault-desktop"
  },
  "icon": "assets/code-vault-logo.png",
  "keywords": [
    "code",
    "snippets",
    "productivity",
    "ai",
    "code-suggestions"
  ]
}